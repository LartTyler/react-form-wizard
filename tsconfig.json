{
	"compilerOptions": {
		"target": "ES6",
		"strict": true,
		"jsx": "react",
		"importHelpers": true,
		"moduleResolution": "node",
		"module": "ES2015",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"./src"
	]
}
